modu std {
    modu str {
       fun join(strings, joiner) {
            var finalStr = strings[0];
            for (strings.skip(1)) {
                finalStr += joiner + it;
            }
            ret finalStr;
        }
    }
}

fun join_range(strings, joiner) {
    var finalStr = '';
    for (0..strings.len()-1) {
        if (ix == 0) {
            finalStr = strings[ix];
        } else {
            finalStr = finalStr + joiner + strings[ix];
        }
    }
    ret finalStr;
}

fun join_array(strings, joiner) {
    var finalStr = strings[0];
    for (strings.skip(1)) {
        finalStr += joiner + it;
    }
    ret finalStr;
}

fun join_array2(strings, joiner) {
    var finalStr = "";
    for (strings) {
        if(ix == 0) {
            finalStr = it;
        } else {
        finalStr += joiner + it;
        }
    }
    ret finalStr;
}

fun main() {
    println(join_array("these three words".split(' '), '\n'));
    println("-----");
    println(join_array2("these are four words".split(' '), '\n'));
    println("-----");
    println(join_range("last join range".split(' '), '\n'));
    println("-----");
    println(std::str::join("hello me!".split(' '), '-'));
}
