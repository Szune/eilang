fun main() {
    var i = 0;
    var stop = false;
    for () {
        if(stop && i == 2) {
            println("stop on next!");
        }
        else if (stop && i == 3)
        {
            println("breaking!");
            break;
        }
        i += 1;
        println("looping, i = " + i);
        
        if(i == 2) {
            println("continuing infinite loop");
            stop = true;
            continue;
        }
    }
}
